tr.order-cell id="order_#{order.id}"
  td= order.number
  td= order.date.to_formatted_s(:ukr)
  td= order.customer.name
  td= order_status(order.status)
  td
    - order.products.each do |p|
      p= p.full_name
  td
    => link_to t('order.cart'), order_path(order), class: 'btn waves-effect waves-light'
    => edit_item_link edit_order_path(order)
    => delete_item_link order_path(order)

